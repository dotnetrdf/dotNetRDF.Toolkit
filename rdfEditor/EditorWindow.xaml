<Window x:Class="rdfEditor.EditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="rdfEditor" Height="638" Width="880">
    <DockPanel>
         <Menu Height="22" 
              HorizontalAlignment="Left" 
              Margin="0,0,0,0" 
              Name="menu1" 
              VerticalAlignment="Top" 
              Width="200" 
              DockPanel.Dock="Top"
              >
            <MenuItem Header="_File">
                <MenuItem Header="Open" Name="mnuOpen" Click="mnuOpen_Click" />
                <MenuItem Header="Open URI" Name="mnuOpenUri" Click="mnuOpenUri_Click" />
                <Separator />
                <MenuItem Header="Save" Name="mnuSave" Click="mnuSave_Click" />
                <MenuItem Header="Save As..." Name="mnuSaveAs" Click="mnuSaveAs_Click" />
                <MenuItem Header="Save With...">
                    <MenuItem Header="NTriples Writer" Name="mnuSaveWithNTriples" Click="mnuSaveWithNTriples_Click" />
                    <MenuItem Header="Turtle Writer" Name="mnuSaveWithTurtle" Click="mnuSaveWithTurtle_Click" />
                    <MenuItem Header="Notation 3 Writer" Name="mnuSaveWithN3" Click="mnuSaveWithN3_Click" />
                    <MenuItem Header="RDF/XML Writer" Name="mnuSaveWithRdfXml" Click="mnuSaveWithRdfXml_Click" />
                    <MenuItem Header="RDF/JSON Writer" Name="mnuSaveWithRdfJson" Click="mnuSaveWithRdfJson_Click" />
                    <MenuItem Header="XHTML+RDFa Writer" Name="mnuSaveWithRdfa" Click="mnuSaveWithRdfa_Click" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Close" Name="mnuClose" Click="mnuClose_Click" />
            </MenuItem>
            <MenuItem Header="_Options">
                    <MenuItem Header="Enable Syntax Highlighting" Name="mnuEnableHighlighting" IsCheckable="True" IsChecked="True" Click="mnuEnableHighlighting_Click" />
                    <MenuItem Header="Highlighter" Name="mnuCurrentHighlighter">
                        <MenuItem Header="None" Name="mnuNoHighlighter" IsCheckable="True" IsChecked="True" Click="mnuNoHighlighter_Click" />
                        <MenuItem Header="RDF/XML" Name="mnuRdfXmlHighlighter" IsCheckable="True" Click="mnuRdfXmlHighlighter_Click" />
                        <MenuItem Header="RDF/JSON" Name="mnuRdfJsonHighlighter" IsCheckable="True" Click="mnuRdfJsonHighlighter_Click" />
                        <MenuItem Header="NTriples" Name="mnuNTriplesHighlighter" IsCheckable="True" Click="mnuNTriplesHighlighter_Click" />
                        <MenuItem Header="Turtle" Name="mnuTurtleHighlighter" IsCheckable="True" Click="mnuTurtleHighlighter_Click" />
                        <MenuItem Header="Notation 3" Name="mnuN3Highlighter" IsCheckable="True" Click="mnuN3Highlighter_Click" />
                        <Separator />
                        <MenuItem Header="SPARQL Query 1.0" Name="mnuSparql10Highlighter" IsCheckable="True" Click="mnuSparql10Highlighter_Click" />
                        <MenuItem Header="SPARQL Query 1.1" Name="mnuSparql11Highlighter" IsCheckable="True" Click="mnuSparql11Highlighter_Click" />
                        <MenuItem Header="SPARQL Results Format XML" Name="mnuSparqlResultsXmlHighlighter" IsCheckable="True" Click="mnuSparqlResultsXmlHighlighter_Click" />
                        <MenuItem Header="SPARQL Results Format JSON" Name="mnuSparqlResultsJsonHighlighter" IsCheckable="True" Click="mnuSparqlResultsJsonHighlighter_Click" />
                </MenuItem>
                    <Separator />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Validate RDF" Name="mnuValidateRdf" Click="mnuValidateRdf_Click" />
                <MenuItem Header="Validate SPARQL Query 1.0" Name="mnuValidateSparqlQuery10" IsEnabled="False" Click="mnuValidateSparqlQuery10_Click" />
                <MenuItem Header="Validate SPARQL Query 1.1" Name="mnuValidateSparqlQuery11" IsEnabled="False" Click="mnuValidateSparqlQuery11_Click" />
            </MenuItem>
            <MenuItem Header="_Help" />
        </Menu>
        <avalonEdit:TextEditor
            xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
            Name="textEditor"
            FontFamily="Consolas"
            FontSize="10pt" Margin="0,0,0,0" 
            DockPanel.Dock="Bottom"
            TextChanged="textEditor_TextChanged"
            />
    </DockPanel>
</Window>
